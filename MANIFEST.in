# Include the README
include README.md

# Include the license file
include LICENSE

# Include the requirements
include requirements.txt

# Include all documentation files in docs/
recursive-include docs *.md

# Include example files
recursive-include examples *.sel

# Include test files if we want to distribute tests
recursive-include tests *.py

# Exclude any compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__/*

# Exclude development and CI files
exclude .gitignore
exclude .git*
exclude .scrutinizer.yml

# Include package data if any
global-include *.py
